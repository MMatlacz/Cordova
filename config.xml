<?xml version='1.0' encoding='utf-8'?>
<widget id="io.matlaczm.fasttrav" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FastTrav</name>
    <description>
        This application helps to determine a shortest path from city A to city B.
    </description>
    <author email="marcin@matlacz.eu" href="http://marcin.matlacz.eu">
        Marcin Mat≈Çacz
    </author>
    <content src="splash.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="img/logo.png" />
</widget>
